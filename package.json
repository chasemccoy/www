{
  "name": "@chasemccoy/www",
  "version": "2022",
  "scripts": {
    "build": "ENVIRONMENT=production yarn clean && concurrently \"eleventy\" \"yarn build:css\"",
    "watch": "eleventy --watch",
    "serve": "eleventy --serve",
    "start": "concurrently \"eleventy --serve --quiet\" \"yarn watch:css\"",
    "debug": "DEBUG=* eleventy",
    "watch:css": "sass --watch src/css:src/_includes/styles",
    "build:css": "sass src/css:src/_includes/styles",
    "clean": "rm -rf _site"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/chasemccoy/www.git"
  },
  "author": {
    "name": "Chase McCoy",
    "email": "hi@chasem.co",
    "url": "https://chasem.co"
  },
  "license": "MIT",
  "homepage": "https://github.com/chasemccoy/www#readme",
  "dependencies": {
    "@11ty/eleventy": "^2.0.0",
    "@11ty/eleventy-img": "^3.0.0",
    "@11ty/eleventy-plugin-rss": "^1.2.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^4.2.0",
    "clean-css": "^5.3.2",
    "eleventy-plugin-embed-twitter": "^1.3.6",
    "eleventy-plugin-youtube-embed": "^1.8.1",
    "fs-extra": "^11.1.0",
    "luxon": "^3.3.0",
    "markdown-it": "^13.0.1",
    "markdown-it-anchor": "^8.6.7",
    "sass": "^1.59.3"
  },
  "devDependencies": {
    "@netlify/plugin-lighthouse": "^4.0.7",
    "concurrently": "^7.6.0"
  }
}
