{
  "name": "www",
  "version": "1.0.0",
  "description": "Chase McCoy's personal website and blog",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chasemccoy/www.com.git"
  },
  "scripts": {
    "start": "concurrently \"yarn start:css\" \"next dev\"",
    "build": "yarn build:css && next build && yarn generate-feed && next export -o .site/",
    "clean": "rimraf ./node_modules/.cache ./.next/cache",
    "prestart": "yarn copy-images",
    "prebuild": "yarn copy-images",
    "start:css": "postcss src/styles/{shared,pages/*}.css -d public/styles -w",
    "build:css": "postcss src/styles/{shared,pages/*}.css -d public/styles  --verbose",
    "copy-images": "node ./bin/copy-images",
    "generate-feed": "node .next/server/generate-feed",
    "lint": "yarn next lint"
  },
  "author": "Chase McCoy",
  "license": "GPL-3.0-only",
  "dependencies": {
    "@leafac/rehype-shiki": "^1.3.1",
    "@remark-embedder/core": "^1.4.2",
    "@remark-embedder/transformer-oembed": "^1.0.2",
    "@silvenon/remark-smartypants": "^1.0.0",
    "clsx": "^1.1.1",
    "gray-matter": "^4.0.3",
    "hast-util-to-html": "^8.0.2",
    "just-group-by": "^1.1.1",
    "mdast-util-to-hast": "^11.2.1",
    "mdast-util-toc": "^6.1.0",
    "mdx-bundler": "^6.0.1",
    "next": "^11.1.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-markdown": "^7.0.1",
    "remark-gfm": "^2.0.0",
    "remark-slug": "^7.0.0",
    "resetti": "^1.1.3",
    "shiki": "^0.9.11",
    "sort-by": "^1.2.0",
    "unist-util-visit": "^4.0.0"
  },
  "devDependencies": {
    "@netlify/plugin-lighthouse": "^2.1.2",
    "autoprefixer": "^10.3.4",
    "concurrently": "^6.2.1",
    "esbuild": "^0.12.26",
    "eslint": "^7.32.0",
    "eslint-config-next": "^11.0.0",
    "feed": "^4.2.2",
    "fs-extra": "^9.1.0",
    "postcss": "^8.3.6",
    "postcss-cli": "^8.3.1",
    "postcss-each": "0.10.0",
    "postcss-import": "^14.0.1",
    "postcss-nested": "^5.0.5",
    "postcss-preset-env": "^6.7.0",
    "postcss-simple-vars": "^6.0.3",
    "rimraf": "^3.0.2"
  },
  "engines": {
    "node": "14.x"
  }
}
