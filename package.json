{
  "name": "www",
  "version": "1.0.0",
  "description": "Chase McCoy's personal website and blog",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chasemccoy/www.com.git"
  },
  "scripts": {
    "start": "concurrently \"yarn start:css\" \"next dev -p 1995\"",
    "build": "yarn build:css && next build && next export -o .site/",
    "clean": "rimraf ./node_modules/.cache ./.next/cache",
    "prestart": "yarn copy-images",
    "prebuild": "yarn copy-images",
    "start:css": "postcss src/styles/{styles,pages/*}.css -d public/styles -w",
    "build:css": "postcss src/styles/{styles,pages/*}.css -d public/styles  --verbose",
    "copy-images": "node ./bin/copy-images",
    "lint": "yarn next lint",
    "format": "prettier --write ."
  },
  "author": "Chase McCoy",
  "license": "MIT",
  "dependencies": {
    "@leafac/rehype-shiki": "^2.1.1",
    "@remark-embedder/core": "^2.0.0",
    "@remark-embedder/transformer-oembed": "^2.0.0",
    "clsx": "^1.1.1",
    "gray-matter": "^4.0.3",
    "hast-util-to-html": "^8.0.3",
    "just-group-by": "^2.0.1",
    "mdast-util-to-hast": "^12.1.1",
    "mdast-util-toc": "^6.1.0",
    "mdx-bundler": "^9.0.1",
    "next": "^12.1.6",
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "react-markdown": "^8.0.3",
    "remark-gfm": "^3.0.1",
    "remark-slug": "^7.0.1",
    "remark-smartypants": "^2.0.0",
    "resetti": "^1.1.3",
    "shiki": "^0.10.1",
    "sort-by": "^1.2.0",
    "unist-util-visit": "^4.1.0"
  },
  "devDependencies": {
    "@netlify/plugin-lighthouse": "^2.1.3",
    "@netlify/plugin-nextjs": "^4.7.1",
    "autoprefixer": "^10.4.7",
    "concurrently": "^7.2.1",
    "esbuild": "^0.14.41",
    "eslint": "^8.16.0",
    "eslint-config-next": "^12.1.6",
    "eslint-config-prettier": "^8.5.0",
    "feed": "^4.2.2",
    "fs-extra": "^9.1.0",
    "postcss": "^8.4.14",
    "postcss-cli": "^8.3.1",
    "postcss-each": "0.10.0",
    "postcss-import": "^14.1.0",
    "postcss-nested": "^5.0.6",
    "postcss-preset-env": "^6.7.0",
    "postcss-simple-vars": "^6.0.3",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2"
  },
  "engines": {
    "node": "14.x"
  }
}
