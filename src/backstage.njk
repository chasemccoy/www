---
title: Backstage
layout: layouts/page.njk
permalink: /backstage/
templateClass: blog
---

<div class='prose'>
  <div class='breadcrumbs mb-12'>
    <a href='/' class='bold'>Home</a>
  </div>

  <h1 class='font-header'>
    <a href="/backstage" class="unstyled">Backstage</a>
  </h1>

  {% set postslist = collections.posts | onlyHiddenPosts %}

  <h2>Drafts</h2>
  <div class='flex flex-column' style="gap: 1em;">
    {% for post in postslist | reverse %}
      <a href="{{post.url}}" class='unstyled block post-preview'>
        <div>
          {% if post.data.title %}
            <h3 style='margin: 0;'>
              <span>{{ post.data.title }}</span>&nbsp;<time datetime="{{ post.date | htmlDateString }}">{{ post.date | shortDate }}</time>
            </h3>
          {% endif %}
        </div>
      </a>
    {% endfor %}
  </div>
</div>