<div class='archives'>
  <h2>Browse the archives</h2>

  <div>
    <h3>Featured</h3>
    <ul class='featured'>
      {% for post in collections.featuredPosts %}
        <li>
          <a href="{{post.url}}">{{post.data.title}}</a>
        </li>
      {% endfor %}
    </ul>
  </div>

  {% set years = collections.postsByYear | keys | reverse %}

  <div>
    <h3>By year</h3>
    <ul class='years unstyled inline'>
      {% for year in years %}
        <li>
          <a href="/{{year}}">{{year}}</a>
        </li>
      {% endfor %}
    </ul>
  </div>
</div>